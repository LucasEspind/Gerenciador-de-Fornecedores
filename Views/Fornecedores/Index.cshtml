@model IEnumerable<FornecedoresModel>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>
            Fornecedores
        </h1>
        <a class="btn btn-outline-success" asp-controller="Fornecedores" asp-action="Cadastrar">Cadastrar Fornecedor</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Especialização</th>
                <th scope="col">CEP</th>
                <th scope="col">Endereço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var fornecedores in Model)
                {
                    <tr>
                        <th scope="row">@fornecedores.Nome</th>
                        <td>@fornecedores.CNPJ</td>
                        <td>@fornecedores.Especializacao</td>
                        <td>@fornecedores.CEP</td>
                        <td>@fornecedores.Endereco</td>
                        <td>
                            <a asp-controller="Fornecedores" asp-action="Editar" asp-route-id="@fornecedores.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Fornecedores" asp-action="Excluir" asp-route-id="@fornecedores.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            } 
            

        </tbody>
    </table>

</div>
